#include<stdio.h>
int main(){
    int size,evenSum = 0,oddSum = 0;
    printf("Size: ");
    scanf("%d",&size);
    int arr[size];
    printf("Enter numbers:\n");
    for(int i = 0;i < size;i++)
        scanf("%d",&arr[i]);
    for(int i = 0;i < size;i++){
        if(arr[i] % 2 == 0)
            evenSum += arr[i];
        else
            oddSum += arr[i];
    }
    printf("Sum even numbers is:%d",evenSum);
    printf("Sum odd numbers is:%d",oddSum);
}
